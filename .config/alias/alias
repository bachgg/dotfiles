# lazygit config
alias gg="lazygit"
export XDG_CONFIG_HOME="$HOME/.config"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# For faster prompt
git config --global oh-my-zsh.hide-info 1   # git_prompt_info
git config --global oh-my-zsh.hide-status 1 # git_prompt_status
