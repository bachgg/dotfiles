# Aliases
alias ..="cd .."
alias ...="cd ../.."
alias ulogout="pkill -u bach"
#alias open="xdg-open"
alias ws="cd ~/workspace"
alias l="exa --long --icons --all --no-user"
alias fapt="/home/bach/.config/fzf/fapt"
alias fimg="/home/bach/.config/fzf/fzfimg.sh"
